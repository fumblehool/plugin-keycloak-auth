{
  "compilerOptions": {
      "lib": [
          "es2021"
      ],
      "module": "commonjs",
      "target": "es2021",
      "strict": true,
      "allowJs": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strictNullChecks": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/typings",
    "node_modules/*"
  ]
}